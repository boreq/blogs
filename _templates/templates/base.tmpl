{{ define "base" }}
<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>{{ template "title" . }}</title>

        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
        <link rel="stylesheet" href="/static/css/main.css">
        <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css">

        <script src="/static/js/main.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous"></script>
        <script>
            $(function() {
                $('time.timeago').timeago();
            });
        </script>

        <meta name="viewport" content="width=device-width, initial-scale=1">
    </head>

    <body id="{{ template "body_id" . }}">
        <div id="site">
            <nav class="navbar">
                <div class="container">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse" aria-expanded="false">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a class="navbar-brand" href="/">Blogs</a>
                    </div>

                    <div class="collapse navbar-collapse" id="navbar-collapse">

                        <div>
                            <ul class="nav navbar-nav">
                                <li id="nav-index"><a class="navbar-link" href="/">Home</a></li>
                                <li id="nav-blogs"><a class="navbar-link" href="/blogs">Blogs</a></li>
                                <li id="nav-posts"><a class="navbar-link" href="/posts">Posts</a></li>
                                <li id="nav-tags"><a class="navbar-link" href="/tags">Tags</a></li>
                            </ul>
                        </div>

                        <div class="navbar-right">
                            {{ if .user.IsAuthenticated }}
                                <ul class="nav navbar-nav navbar-right">
                                    <li class="dropdown">
                                        <a aria-expanded="true" aria-haspopup="true" role="button" data-toggle="dropdown" class="dropdown-toggle" id="user-drop">
                                            <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
                                            {{ .user.GetUser.Username }}
                                            <span class="caret"></span>
                                        </a>
                                        <ul aria-labelledby="user-drop" class="dropdown-menu">
                                            <li><a href="/profile/{{.user.GetUser.ID}}/stars">Your stars</li>
                                            <li><a href="/profile/{{.user.GetUser.ID}}/subscriptions">Your subscriptions</li>
                                            <li class="divider" role="separator"></li>
                                            <li><a href="/signout">Sign out</a></li>
                                        </ul>
                                    </li>
                                </ul>
                            {{ else }}
                                <ul class="nav navbar-nav">
                                    <li id="nav-register">
                                        <a class="navbar-link" href="/signup">Sign up</a>
                                    </li>
                                    <li id="nav-login">
                                        <a class="navbar-link" href="/signin">Sign in</a>
                                    </li>
                                </ul>
                            {{ end }}
                        </div>

                    </div>
                </div>
            </nav>

            {{ template "content" . }}
        </div>

        <footer class="footer">
            <div class="container">
                <p class="text-muted">Footer.</p>
            </div>
        </footer>
    </body>
</html>
{{ end }}
{{ define "title" }}{{ end }}
{{ define "body_id" }}{{ end }}
