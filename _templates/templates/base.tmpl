{{ define "base" }}
<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>{{ template "title" . }}</title>
        <link rel="stylesheet" href="/static/css/main.css" title="Default">
        <script src="/static/js/main.js"></script>
        <meta name="viewport" content="width=device-width, initial-scale=1">
    </head>

    <body id="{{ template "body_id" . }}">
        <div id="site">
            <nav class="navbar">
                <div class="container">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse" aria-expanded="false">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a class="navbar-brand" href="/">Blogs</a>
                    </div>

                    <div class="collapse navbar-collapse" id="navbar-collapse">

                        <div>
                            <ul class="nav navbar-nav">
                                <li id="nav-index"><a class="navbar-link" href="/">Home</a></li>
                                <li id="nav-blogs"><a class="navbar-link" href="/blogs">Blogs</a></li>
                                <li id="nav-posts"><a class="navbar-link" href="/posts">Posts</a></li>
                                <li id="nav-tags"><a class="navbar-link" href="/tags">Tags</a></li>
                                <li id="nav-explore"><a class="navbar-link" href="/explore">Explore</a></li>
                            </ul>
                        </div>

                        <div class="navbar-right">
                            {{ if .user.IsAuthenticated }}
                                <ul class="nav navbar-nav navbar-right">
                                    <li class="dropdown">
                                        <a aria-expanded="true" aria-haspopup="true" role="button" data-toggle="dropdown" class="dropdown-toggle" id="user-drop">
                                            <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
                                            {{ .user.GetUser.Username }}
                                            <span class="caret"></span>
                                        </a>
                                        <ul aria-labelledby="user-drop" class="dropdown-menu">
                                            <li><a href="/profile/{{.user.GetUser.ID}}/stars">Your stars</a></li>
                                            <li><a href="/profile/{{.user.GetUser.ID}}/subscriptions">Your subscriptions</a></li>
                                            <li class="divider" role="separator"></li>
                                            <li><a href="/settings">Settings</a></li>
                                            <li><a href="/signout">Sign out</a></li>
                                        </ul>
                                    </li>
                                </ul>
                            {{ else }}
                                <ul class="nav navbar-nav">
                                    <li id="nav-register">
                                        <a class="navbar-link" href="/signup">Sign up</a>
                                    </li>
                                    <li id="nav-login">
                                        <a class="navbar-link" href="/signin">Sign in</a>
                                    </li>
                                </ul>
                            {{ end }}
                        </div>

                    </div>
                </div>
            </nav>

            {{ template "content" . }}
        </div>

        <footer class="footer">
            <div class="container">
                <p class="text-muted">
                    <a href="https://github.com/boreq/blogs" title="Project repository on Github" data-toggle="tooltip" data-placement="top"><i class="fa fa-code"></i></a>
                    <a href="/updates"><i class="fa fa-area-chart" title="Update statistics" data-toggle="tooltip" data-placement="top"></i></a>
                    &bull;
                    <a href="https://github.com/boreq/blogs/issues/new">Report a bug or ask for new features</a>
                    <noscript>
                        <span class="js-message pull-right">
                            While harmful technology called JavaScript is certainly not
                            required to use the website it makes it work slightly
                            better.
                        </span>
                    </noscript>
                </p>
            </div>
        </footer>
    </body>
</html>
{{ end }}
{{ define "title" }}{{ end }}
{{ define "body_id" }}{{ end }}
