{{ define "subscription_buttons_compact" }}
    {{ if .user.IsAuthenticated }}
        {{ if .subscription }}
            <form method="POST" class="subscribe-form-compact" action="/blog/unsubscribe?next={{ .request.URL }}">
                <input type="hidden" name="blog_id" value="{{ .blog_id }}">
                <button type="submit" class="button-clear" title="Click to unsubscribe">
                    <i class="fa fa-paper-plane"></i>
                </button>
            </form>
        {{ else }}
            <form method="POST" class="subscribe-form-compact" action="/blog/subscribe?next={{ .request.URL }}">
                <input type="hidden" name="blog_id" value="{{ .blog_id }}">
                <button type="submit" class="button-clear" title="Click to subscribe">
                    <i class="fa fa-paper-plane-o"></i>
                </button>
            </form>
        {{ end }}
    {{ else }}
        <button class="button-clear disabled" title="Sign in to subscribe to blogs">
            <i class="fa fa-paper-plane-o"></i>
        </button>
    {{ end }}
{{ end }}

