{{ define "subscription_buttons" }}
    {{ if .user.IsAuthenticated }}
        {{ if .subscription }}
            <form method="POST" action="/blog/unsubscribe?next={{ .request.URL }}">
                <input type="hidden" name="blog_id" value="{{ .blog_id }}">
                <button type="submit" class="btn btn-danger btn-block" title="Click to unsubscribe">
                    <i class="fa fa-paper-plane"></i>
                    Unsubscribe
                </button>
            </form>
        {{ else }}
            <form method="POST" action="/blog/subscribe?next={{ .request.URL }}">
                <input type="hidden" name="blog_id" value="{{ .blog_id }}">
                <button type="submit" class="btn btn-success btn-block" title="Click to subscribe">
                    <i class="fa fa-paper-plane-o"></i>
                    Subscribe
                </button>
            </form>
        {{ end }}
    {{ else }}
        <button class="btn btn-success btn-block" disabled="disabled" title="Sign in to subscribe to blogs">
            <i class="fa fa-paper-plane-o"></i>
            Subscribe
        </button>
    {{ end }}
{{ end }}

