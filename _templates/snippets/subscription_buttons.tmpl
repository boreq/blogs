{{ define "subscription_buttons" }}
    {{ if .user.IsAuthenticated }}
        {{ if .subscription }}
            <form method="POST" class="subscribe-form" action="/nojs/blog/unsubscribe?next={{ .request.URL }}">
                <input type="hidden" name="blog_id" value="{{ .blog_id }}">
                <button type="submit" class="btn btn-danger btn-block" title="Click to unsubscribe" isselected="true">
                    <i class="fa fa-paper-plane fa-fw"></i>
                    <span>Unsubscribe</span>
                </button>
            </form>
        {{ else }}
            <form method="POST" class="subscribe-form" action="/nojs/blog/subscribe?next={{ .request.URL }}">
                <input type="hidden" name="blog_id" value="{{ .blog_id }}">
                <button type="submit" class="btn btn-success btn-block" title="Click to subscribe" isselected="false">
                    <i class="fa fa-paper-plane-o fa-fw"></i>
                    <span>Subscribe</span>
                </button>
            </form>
        {{ end }}
    {{ else }}
        <button class="btn btn-success btn-block" disabled="disabled" title="You need to sign in to subscribe to blogs." data-toggle="tooltip">
            <i class="fa fa-paper-plane-o fa-fw"></i>
            <span>Subscribe</span>
        </button>
    {{ end }}
{{ end }}

